@model IEnumerable<sikayetvar.Models.Complaint>

<h2>Şikayet Listesi</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Başlık</th>
            <th>Açıklama</th>
            <th>Oluşturan</th>
            <th>Tarih</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Title</td>
                    <td>@item.Description</td>
                    <td>@item.User?.UserName</td>
                    <td>@item.CreatedAt.ToString("g")</td>
                </tr>
        }
    </tbody>
</table>
